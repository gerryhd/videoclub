<div class="container-fluid movie-container">
  <div class="row">
    <div class="col-sm-6 movie-info">
      <h2><%= @movie.title %></h2>
      <h4><%= @movie.year %></h4>
      <p><%= @movie.description %></p>

    </div>
    <div class="col-sm-6">
      <%= image_tag("https://placehold.it/320x480?text=IMAGE",
                    class: "poster img-responsive center-block",
                    alt: "Poster de #{@movie.title}") %>
    </div>
    <div class="col-sm-8">
      <%= button_to "Rentar", make_a_rent_path + "/#{@movie.slug}", method: 'get' %>
    </div>
  </div>
</div>